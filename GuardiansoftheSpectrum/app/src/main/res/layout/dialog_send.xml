<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:rowCount="2"
    android:columnCount="8">

    <!--the labelFor attribute is necessary in order to suppress a very cryptic warning
        about there not being any label views pointing to the text field. What this does
        is indicate that the text contained in this text view clarifies what kind of data
        will be present in the edittext view. In this case, the inputted text in the @id/serverIP
        edittext will be the IP of the server, and the inputted text in the @id/serverPort
        edittext will be the port number we connect to. This apparently helps a lot with things
        like screen readers.-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:labelFor="@+id/serverIP"
        android:text="Server IP" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:inputType="number"
        android:digits="0123456789."
        android:maxLength="15"
        android:text="128.138.202.15"
        android:id="@id/serverIP"/>
    <TextView
        android:text="Port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/serverPort"
        android:layout_row="1"
        android:layout_column="0"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@id/serverPort"
        android:text="5000"
        android:layout_row="1"
        android:layout_column="1"/>
</GridLayout>
