<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.colorado.gots.guardiansofthespectrum.MainActivity">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/guardians"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textview1"
        android:contentDescription="@string/imageDesc"
        android:id="@+id/imageView"
        android:adjustViewBounds="true"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/LTEscan_button"
            android:text="LTE Scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="initiateLTEScan"
            android:layout_weight="1" />

        <Button
            android:text="Test Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_weight="1" />
    </LinearLayout>


    <Button
        android:text="@string/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/sendButton"
        android:onClick="initiateSend"/>
    <Button
        android:id="@+id/scanButton"
        android:text="@string/scanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="initiateScan"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/scanButton"
        android:layout_toRightOf="@id/sendButton"
        android:text="@string/deleteButton"
        android:onClick="initiateDelete"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scanServiceSwitch"
        android:layout_above="@id/scanButton"
        android:text="@string/scanServiceLabel"
        android:textOn="@string/scanServiceLabelTextOn"
        android:textOff="@string/scanServiceLabelTextOff"/>

</RelativeLayout>
